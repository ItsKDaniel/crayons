{
  "name": "crayons-common",
  "version": "0.0.1",
  "description": "common config for crayons",
  "main": "",
  "scripts": {
    "build": "rimraf dist && npm run build:style",
    "build:style": "npm run build:scss && npm run build:autoprefix && npm run build:min",
    "build:scss": "node-sass --include-path node_modules --include-path ../../node_modules --output-style compressed --recursive styles/global/crayons.scss -o dist/css",
    "build:autoprefix": "postcss dist/css/*.css --use autoprefixer --dir  dist/css/",
    "build:min": "cleancss -b dist/css/*.css dist/css/"
  },
  "files": [
    "styles/",
    "dist/"
  ],
  "devDependencies": {
    "clean-css-cli": "^5.3.3",
    "postcss": "^7.0.36",
    "postcss-cli": "^7.1.2",
    "autoprefixer": "^9.6.1",
    "node-sass": "^5.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
